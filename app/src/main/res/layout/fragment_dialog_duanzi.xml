<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/primary_margin">

                <ImageView
                    android:layout_marginTop="3dp"
                    android:id="@+id/iv_head"
                    android:layout_width="@dimen/neihan_head_height"
                    android:layout_height="@dimen/neihan_head_height"/>

                <TextView
                    android:id="@+id/tv_username"
                    android:layout_toRightOf="@id/iv_head"
                    android:layout_alignParentTop="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/primary_margin"
                    android:layout_marginLeft="@dimen/primary_margin"
                    android:maxLines="1"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="@dimen/title_text_size" />

                <TextView
                    android:id="@+id/tv_neihan_content"
                    android:layout_below="@id/iv_head"
                    android:layout_marginTop="@dimen/primary_margin"
                    android:lineSpacingMultiplier = "1.5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"/>

                <!--<View-->
                    <!--android:layout_marginTop="@dimen/primary_margin"-->
                    <!--android:layout_below="@id/tv_neihan_content"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="@dimen/divider_height"-->
                    <!--android:background="@color/colordivider"/>-->
            </RelativeLayout>

    </ScrollView>

</RelativeLayout>